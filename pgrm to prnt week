//Write a C program to print day of week name using switch case.
#include <iostream>
using namespace std;
int main()
{
int weekname;
cout << "Please enter a number from 1 to 7: ";
	cin>>weekname;
	switch (weekname)
	{
	case 1: cout << "Monday";
		break;
	case 2: cout << "Tuesday";
		break;
	case 3: cout << "Wednesday";
		break;
	case 4: cout << "Thursday";
		break;
	case 5: cout << "Friday";
		break;
	case 6: cout << "Saturday";
		break;
	case 7: cout << "Sunday";
		break;
	default: cout << "Invalid input! Please enter week no. between 1-7.";
	}
	// int x + cin x is like a type exit to close buttoon
	int x;
	cin >> x;
}

